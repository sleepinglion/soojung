<section id="slboard_history_show" class="slboard_main">
	<div class="section_top">
		<h1><%=@board_name %></h1>
		<p class="path"><%=link_to '홈으로',root_path,:title=>'홈으로' %>  &gt; <strong><%=@board_name %></strong></p>	
	</div>
	<p id="notice"><%= notice %></p>	
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @history.title %></h3>
			<p>작성자 :<%= @history.user.name %>&nbsp;&nbsp;&nbsp; 작성일 : <%= @history.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"><%= simple_format(@history.content) %></div>
		</div>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to '목록으로',notices_path %>
		<% if user_signed_in? %>
		<% if current_user.admin? %>
		&nbsp; | &nbsp; <%= link_to '수정', edit_notice_path(@history) %> &nbsp; | &nbsp; <%= link_to '삭제', @history, method: :delete, data: { confirm: '정말로 삭제합니까?' } %>
		<% end %>
		<% end %>
	</div>
</section>
