<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="sl_intro_show">
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @notice.title %></h3>
			<p><%=t(:label_name) %> :<%= @notice.user.name %>&nbsp;&nbsp;&nbsp; <%=t(:label_creatd_at) %> : <%= @notice.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"><%= simple_format(@notice.notice_content.content) %></div>
		</div>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_list),notices_path %>
		<% if user_signed_in? %>
		<% if current_user.admin? %>
		&nbsp; | &nbsp; <%= link_to t(:link_edit), edit_notice_path(@notice) %> &nbsp; | &nbsp; <%= link_to t(:link_delete), @notice, method: :delete, data: { confirm: t(:delete_confirm) } %>
		<% end %>
		<% end %>
	</div>
</section>
