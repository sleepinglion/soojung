<% breadcrumb :guest_books %>
<section id="sl_guest_book_index">
	<article class="table-responsive">
		<table width="100%" cellpadding="0" cellspacing="0" class="table table-striped">
			<colgroup>
				<col width="100px" />
				<col />
				<col width="70px" />
				<col width="70px" />
				<col width="130px" />
			</colgroup>
			<thead>
				<tr>
					<th class="sl_t_sl_t_name hidden-sm hidden-xs"><%=t(:label_name) %></th>
					<th class="sl_t_title"><%=t(:label_title) %></th>
					<th class="sl_t_count"><%=t(:label_comment) %></th>
					<th class="sl_t_count"><%=t(:label_count) %></th>
					<th class="sl_t_created_at"><%=t(:label_created_at) %></th>
				</tr>
			</thead>
			<tbody>
				<% unless @guest_books.empty? %>
				<% @guest_books.each do |guest_book| %>
				<tr>
					<td class="sl_t_name hidden-sm hidden-xs"><%=userName(guest_book,10) %></td>
					<td class="sl_t_title"><%= link_to guest_book.title, guest_book  %></td>
					<td class="sl_t_count"><%= guest_book.guest_book_comments_count %></td>
					<td class="sl_t_count"><%=guest_book.count+guest_book.impressionist_count(:filter=>:ip_address) %></td>
					<td class="sl_t_created_at"><%=guest_book.created_at.to_date %></td>
				</tr>
				<% end %>
				<% else %>
				<tr>
					<td colspan="5"><p><%=t(:no_data)%></p></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</article>
	<div id="sl_index_bottom_menu">
		<%= link_to t(:link_new), new_guest_book_path,:rel=>"nofollow",:class=>"btn btn-default" %>		
		<%= paginate @guest_books %>
	</div>
</section>