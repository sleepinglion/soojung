<% if notice  %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="sl_attendance_show">
  <div class="slboard_content">
    <div class="sl_content_header">
      <h3></h3>
      <p>&nbsp;&nbsp;&nbsp; <%=t(:label_created_at) %> : <%= @attendance.created_at %></p>
    </div>
    <div class="sl_content_main">
      <div class="sl_content_text"></div>
    </div>
  </div>
  <div id="sl_content_bottom_menu">
    <%= link_to t(:link_list),attendances_path %>
    <% if can? :update, Attendance %>
    &nbsp; | &nbsp; <%= link_to t(:link_edit), edit_attendance_path(@attendance),:rel=>"nofollow" %>
    <% end %>
    <% if can? :delete, Attendance %>
    &nbsp; | &nbsp; <%= link_to t(:link_delete), @attendance, method: :delete, data: { confirm: t(:delete_confirm) },:rel=>"nofollow" %>
    <% end %>
  </div>
</section>
