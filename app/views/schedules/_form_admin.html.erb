<%= form_for @attendance,:class=>'form-horizontal' do |f| %>
<% if @attendance.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@attendance.errors.count, "error") %> prohibited this gallery from being saved:</h2>
  <ul>
    <% @attendance.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-group">
  <%= f.label :user_id,:class=>'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :user_id, options_from_collection_for_select(User.where(:enable=>true), 'id', "login_id",@user_id),:class=>'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :created_at,:class=>'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.datetime_select :created_at, :class => "form-control",:required=>'required' %>
  </div>
</div>
<div class="form-group actions">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit :class=>"btn btn-primary" %>
  </div>
</div>
<% end %>

