<section id="admin_gallery_show">
	<p id="notice"><%= notice %></p>	
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @admin_gallery.title %></h3>
			<p>&nbsp;&nbsp;&nbsp; 작성일 : <%= @admin_gallery.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text">  <%= simple_format(@admin_gallery.content) %></div>
		</div>
	</div>
	<div id="sl_bottom_menu">
  <% if can? :manage, @admin_gallery %>
		<%= link_to '글쓰기', new_admin_gallery_path %>
		<%= link_to '글수정', edit_admin_gallery_path(@admin_gallery) %>
		<% end %>
		<%= link_to '목록으로',admin_galleries_path %>
	</div>
</section>
