<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="sl_portfolio_show">
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @admin_portfolio.title %></h3>
			<p>작성일 : <%= @admin_portfolio.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"></div>
		</div>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_list),admin_portfolios_path %>
		<% if user_signed_in? %>
		&nbsp; | &nbsp; <%= link_to '수정', edit_admin_portfolio_path(@admin_portfolio) %> &nbsp; | &nbsp; <%= link_to '삭제',admin_portfolio_path(@admin_portfolio), method: :delete, data: { confirm: '정말로 삭제합니까?' } %>
		<% end %>
	</div>
</section>
