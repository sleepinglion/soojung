<%= form_for [:admin,@admin_portfolio],:html => {:multipart => true} do |f| %>
  <% if @admin_portfolio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_portfolio.errors.count, "error") %> 애러가 있어 입력되지 못했습니다.</h2>
      <ul>
      <% @admin_portfolio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
	<% end %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, :class=>'form-control', :required=>'required' %>
	</div>
	<div class="form-group">
		<%= f.label :url %>
		<%= f.url_field :url, :class=>'form-control', :required=>'required' %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_field :description, :class=>'form-control', :required=>'required' %>
	</div>
	<%= f.fields_for :portfolio_content do |c| %>
	<div>
		<%= c.label :content %>
		<%= c.text_area :content, :class=>'form-control', :id => "sl_content" %>
	</div>
	<% end %>
	<div class="form-group">
		<%= f.label :photo %>
		<%= f.file_field :photo %>
	</div>
	<div class="form-group actions">
		<%= f.submit :class=>"btn btn-primary" %>
	</div>
<% end %>
