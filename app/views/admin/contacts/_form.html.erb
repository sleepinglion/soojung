<%= form_for @admin_contact,:html=>{:class=>'form-horizontal'}  do |f| %>
  <% if @admin_contact.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@admin_contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
    <ul>
      <% @admin_contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, :class=>'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class=>'form-control', :required=>'required' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, :class=>'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class=>'form-control', :required=>"required" %>
    </div>
  </div>
  <%= f.fields_for :contact_content do |c| %>
  <div class="form-group">
    <%= c.label :content, :class=>'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= c.text_area :content, :class=>'form-control',:rows=>10 %>
    </div>
  </div>
  <% end %> 
  <div class="form-group actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class=>'btn btn-primary' %>
    </div>
  </div>
<% end %>