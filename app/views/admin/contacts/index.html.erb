<section id="sl_guest_book_index" class="table-responsive">
	<table width="100%" cellpadding="0" cellspacing="0" class="table table-striped table-hover">
		<colgroup>
			<col width="100px" />
			<col />
			<col width="70px" />						
			<col width="70px" />
			<col width="130px" />
		</colgroup>
		<thead>
			<tr>
				<th><p class="sl_name"><%=t(:label_name) %></p></th>
				<th><p class="sl_title"><%=t(:label_title) %></p></th>
				<th class="sl_right"><p class="sl_count"><%=t(:label_comment) %></p></th>				
				<th class="sl_right"><p class="sl_count"><%=t(:label_count) %></p></th>
				<th class="sl_right"><p class="sl_registered_date"><%=t(:label_created_at) %></p></th>
			</tr>
		</thead>
		<tbody>
			<% unless @admin_contacts.empty? %>
			<% @admin_contacts.each do |admin_admin_contact| %>
			<tr>
				<td><p class="sl_name" title="<%=userName(admin_contact) %>"><%=userName(admin_contact,10) %></p></td>
				<td><p><%= link_to admin_contact.title, admin_contact  %></p></td>
				<td class="sl_right"><p class="sl_count"></p></td>				
				<td class="sl_right"><p class="sl_count"><%=admin_contact.impressionist_count(:filter=>:ip_address) %></p></td>
				<td class="sl_right"><p class="sl_registered_date"><%=admin_contact.created_at.to_date %></p></td>
			</tr>
			<% end %>			
			<% else %>
			<tr>
				<td colspan="5"><p><%=t(:no_data)%></p></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<div id="sl_bottom_menu">
		<%= link_to t(:link_new), new_admin_contact_path %>
		<%= paginate @admin_contacts %>
	</div>
</section>