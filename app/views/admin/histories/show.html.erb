<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="sl_history_show">
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @admin_history.year %></h3>
			<p><%=t(:label_name) %> :<%= @admin_history.user.name %>&nbsp;&nbsp;&nbsp; <%=t(:label_creatd_at) %> : <%= @admin_history.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"><%= simple_format(@admin_history.content) %></div>
		</div>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_list),admin_histories_path %>
		&nbsp; | &nbsp; <%= link_to t(:link_edit), edit_admin_history_path(@admin_history) %> &nbsp; | &nbsp; <%= link_to t(:link_delete), admin_history_path(@admin_history), method: :delete, data: { confirm: t(:delete_confirm)} %>
	</div>
</section>
