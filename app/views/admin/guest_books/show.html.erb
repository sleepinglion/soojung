<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="admin_guest_book_show">
  <div class="slboard_content">
    <div class="sl_content_header">
      <h3><%= @admin_guest_book.title %></h3>
      <p>작성자 :<%= @admin_guest_book.name %>&nbsp;&nbsp;&nbsp; 작성일 : <%= @admin_guest_book.created_at %></p>
    </div>
    <div class="sl_content_main">
      <div class="sl_content_text"><%= simple_format(@admin_guest_book.guest_book_content.content) %></div>
    </div>
  </div>
  <div id="sl_comment_list_layer">
    <%= render @admin_guest_book_comments %>
  </div>
  <div class="flickr_pagination"><%= paginate @admin_guest_book_comments %></div>	
  <div id="sl_comment_form_layer">
    <%= render "admin/guest_book_comments/form" %>
  </div>
  <div id="sl_content_bottom_menu">
    <%= link_to t(:link_list), admin_guest_books_path %> &nbsp; | &nbsp;  
    <%= link_to t(:link_edit), edit_admin_guest_book_path(@admin_guest_book) %> &nbsp; | &nbsp;	
    <%= link_to t(:link_delete), admin_guest_book_path(@admin_guest_book), method: :delete, data: { confirm: t(:delete_confirm)} %>
  </div>
</section>
