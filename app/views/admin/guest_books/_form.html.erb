<%= form_for [:admin,@admin_guest_book],:html=>{:class=>'form-horizontal'} do |f| %>
<% if @admin_guest_book.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@admin_guest_book.errors.count, "error") %> prohibited this notice from being saved:</h2>
  <ul>
    <% @admin_guest_book.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>
<% unless user_signed_in? %>
<div class="form-group">
  <%= f.label :name, :class=>'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :name, :class=>'form-control', :required=>'required' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password, :class=>'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.password_field :password, :class=>'form-control', :required=>'required' %>
  </div>
</div>
<% end %>
<div class="form-group">
  <%= f.label :title, :class=>'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :title, :class=>'form-control', :required=>'required' %>
  </div>
</div>
<%= f.fields_for :guest_book_content do |c| %>
<div class="form-group">
  <%= c.label :content, :class=>'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= c.text_area :content, :class=>'form-control', :rows=>7, :required=>'required' %>
  </div>
</div>
<% end %>
<div class="form-group actions">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit :class=>'btn btn-primary' %>
  </div>
</div>
<% end %>
