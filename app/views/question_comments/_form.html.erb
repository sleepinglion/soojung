<%= form_for([@question, @question_comment]) do |f| %>
	<% unless user_signed_in? %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, :class=>'form-control', :required=>'required' %>
 	</div>
 	<div class="form-group">
 		<%= f.label :password %>
 		<%= f.password_field :password, :class=>'form-control', :required=>'required' %>
 	</div>
 	<% end %>
 	<div class="form-group">
 		<%= f.label :content %>
 		<%= f.text_area :content, :class=>'form-control', :required=>'required' %>
 	</div>
	<% if Rails.env.production? %>
	<% unless user_signed_in? %>
	<div class="form-group">
		<div><%= recaptcha_tags :display => { :theme => "clean" } %></div>
	</div>
	<% end %>
	<% end %>
 	<div class="form-group actions">
		<%= f.submit :class=>'btn btn-primary' %>
 	</div>
<% end %>