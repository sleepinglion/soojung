<header>
	<h1 class="title"><%=link_to t(:home_title),root_path,:title=>t(:home_title) %></h1>	
	<% if user_signed_in? %>			
	<ul id="top_menu">	
		<li><%=link_to current_user.name,edit_user_registration_path %><%=t(:welcome)%></li>
		<li><%=link_to t(:logout),destroy_user_session_path %></li>
	</ul>
	<% end %>
	<nav>
	<ul id="sdt_menu" class="sdt_menu">
		<% unless @resources.empty? %>
		<% @resources.each do |resource| %>
		<li>
			<%=link_to :controller=>'/'+resource.controller  do %>
				<%=image_tag resource.resource_photo.photo.medium_thumb,:alt=>resource.resource_photo.alt %>
				<span class="sdt_active"></span>
					<span class="sdt_wrap">
					<span class="sdt_link"><%=t('activerecord.models.'+resource.controller.singularize) %><span class="visible-xs glyphicon glyphicon-chevron-right icon-white pull-right"></span></span>
				</span>
			<% end %>
		</li>
		<% end %>
		<% else %>
		<li></li>
		<% end %>						
		</ul>
	</nav>
</header>